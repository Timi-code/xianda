/* pages/single/single.wxss */

.page {
  padding:0 0 20rpx;
}

.page .static-section {
  position: fixed;
  top: 0;
  width: 100%;
  background-color: #fff;
  z-index: 1;
}

/* 搜索 */

.page .search-box {
  width: 722rpx;
  height: 72rpx;
  background-color: #f7f7f7;
  margin: 0 auto;
  border-radius: 10rpx;
  overflow: hidden;
}

.page .search-box .search-input {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
}

.page .search-box .search-input .icon {
  margin: 0 20rpx;
}

.page .search-box .search-input .search-text {
  font-size: 32rpx;
  color: #acacad;
}


/* 导航 */
.tabs {
  display: flex;
  justify-content: space-around;
}

.tabs .item {
  font-size: 33rpx;
  color: #9D9D9E;
  line-height: 2;
}

.tabs .item.active {
  color: #000000;
  font-weight: bold;
  border-bottom: 2px solid #000000;
}

.page .lists {
  padding: 0 32rpx;
}

/* 添加 */
.page .add {
  position: fixed;
  right: 32rpx;
  bottom: 32rpx;
  width: 96rpx;
  height: 96rpx;
}

.page .add image {
  width: 100%;
  height: 100%;
}