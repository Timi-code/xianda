/* pages/index/index.wxss */

.page {
    padding: 20rpx 0;
}

/* 搜索 */

.page .search-box {
    width: 722rpx;
    height: 72rpx;
    background-color: #F7F7F7;
    margin: 0 auto;
    border-radius: 10rpx;
    overflow: hidden;
}

.page .search-box .search-input {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
}

.page .search-box .search-input .icon {
    margin: 0 20rpx;
}

.page .search-box .search-input .search-text {
    font-size: 32rpx;
    color: #ACACAD;
}
