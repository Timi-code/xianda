/* pages/index/index.wxss */

.page {
    padding: 20rpx 0;
}

/* 搜索 */

.page .search-box {
    width: 722rpx;
    height: 72rpx;
    background-color: #F7F7F7;
    margin: 0 auto;
    border-radius: 10rpx;
    overflow: hidden;
}

.page .search-box .search-input {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
}

.page .search-box .search-input .icon {
    margin: 0 20rpx;
}

.page .search-box .search-input .search-text {
    font-size: 32rpx;
    color: #ACACAD;
}

/* 内容 */

.content {
    margin: 0 20rpx;
    text-align: justify;
    margin-top: 20rpx;
}

.left,
.right {
    vertical-align: top;
    width: 49%;
    float: left;
}

.right {
    float: right;
}

.item {
    background-color: #fff;
    margin: 1%;
    margin-bottom: 60rpx;
}

.item-img {
    width: 100%;
    border-radius: 10rpx;
}

.item-tag view {
    float: left;
    font-size: 27rpx;
    line-height: 38rpx;
    color: #ccc;
    margin-right: 10rpx;
    text-align: justify;
    word-break: break-all;
}

.item-tag text {
    font-size: 27rpx;
    line-height: 38rpx;
    color: #000000;
}

.item-tag .sharp {
    color: #ccc;
}