/* pages/search/search.wxss */

.page {
    padding: 20rpx 0;
}

/* 搜索 */

.page .search-box {
    width: 100%;
    height: 90rpx;
    display: flex;
    align-items: center;
    margin: 0 auto;
    overflow: hidden;
    background-color: #fff;
    padding: 0 14rpx;
}

.page .search-box .search-input {
    width: 612rpx;
    height: 72rpx;
    display: flex;
    align-items: center;
    background-color: #F7F7F7;
    border-radius: 10rpx;
}

.page .search-box .search-input input {
    flex: 1;
    font-size: 32rpx;
    color: #ACACAD;
}

.page .search-box .search-input .icon {
    margin: 0 20rpx;
}

.page .search-box .cancel {
    flex: 1;
    text-align: center;
    font-size: 30rpx;
    color: #52B531;
}