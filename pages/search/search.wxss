/* pages/search/search.wxss */

.page {
  padding: 20rpx 0;
}

/* 搜索 */

.page .search-box {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  margin: 0 auto;
  overflow: hidden;
  background-color: #fff;
  padding: 0 14rpx;
}

.page .search-box .search-input {
  width: 612rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  background-color: #f7f7f7;
  border-radius: 10rpx;
}

.page .search-box .search-input input {
  flex: 1;
  font-size: 32rpx;
  color: #000;
}

.page .search-box .search-input .icon {
  margin: 0 20rpx;
}

.page .search-box .cancel {
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  color: #52b531;
}

/* 导航 */

.tabs {
  display: flex;
}

.tabs .item {
  width: 82rpx;
  font-size: 33rpx;
  color: #9d9d9e;
  line-height: 2;
  text-align: center;
  margin: 0 20rpx;
}

.tabs .item.active {
  color: #000;
  font-weight: bold;
  border-bottom: 2px solid #000;
}

/* 无搜索结果 */

.none-result {
  text-align: center;
  font-size: 38rpx;
  color: #79797a;
  margin-top: 300rpx;
}

.page .lists {
  padding: 0 32rpx;
}
