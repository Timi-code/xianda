/* pages/check-the-single/check-the-single.wxss */

page {
  width: 100%;
  height: 100%;
}

.single {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
}

.tool-bar {
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 2;
  height: 100rpx;
  background-color: rgba(20, 20, 20, 0.75);
  overflow: hidden;
  display: flex;
  align-items: center;
}

.tool-bar .tags {
  float: left;
  width: 598rpx;
  padding: 10rpx 32rpx;
  font-size: 28rpx;
  color: #fff;
  line-height: 40rpx;
}

.tool-bar .tags text {
  white-space: pre-wrap;
}

.tool-bar .more {
  float: right;
  width: 120rpx;
}

.tool-bar .more image {
  width: 100%;
  height: 100%;
}
