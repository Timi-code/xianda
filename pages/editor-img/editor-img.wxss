/* pages/editor-img/editor-img.wxss */

page {
  height: calc(100% - 128rpx);
}

.cropper-wrapper {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.cropper-buttons {
  flex: 1;
  color: #fff;
  background-color: #000;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.cropper-buttons .select-ratio {
  display: flex;
  justify-content: space-around;
  align-items: baseline;
  padding: 20rpx 0;
}

.cropper-buttons .select-ratio .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  font-size: 22rpx;
  color: #525252;
}

.cropper-buttons .select-ratio .item .shape {
  border: 1px solid #525252;
}

.cropper-buttons .select-ratio .item .shape1 {
  width: 54rpx;
  height: 54rpx;
}

.cropper-buttons .select-ratio .item .shape2 {
  width: 47rpx;
  height: 62rpx;
}

.cropper-buttons .select-ratio .item .shape3 {
  width: 40rpx;
  height: 72rpx;
}

.cropper-buttons .select-ratio .item.active {
  color: #3ebd33;
}

.cropper-buttons .select-ratio .item.active .shape {
  border-color: #3ebd33;
}

.cropper-buttons .getCropperImage {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #3ebd33;
  border-top: 1px solid #222;
}
