/* pages/group-single-add/group-single-add.wxss */

.page {
  padding: 20rpx 0;
}

/* 搜索 */

.page .search-box {
  width: 722rpx;
  height: 72rpx;
  background-color: #f7f7f7;
  margin: 0 auto;
  border-radius: 10rpx;
  overflow: hidden;
}

.page .search-box .search-input {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
}

.page .search-box .search-input .icon {
  margin: 0 20rpx;
}

.page .search-box .search-input .search-text {
  font-size: 32rpx;
  color: #acacad;
}

.page .lists {
  padding: 0 32rpx;
}

/* 确定 */

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: row-reverse;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
}

.bottom-bar text {
  color: #52b531;
  font-size: 36rpx;
  margin-right: 32rpx;
}

.bottom-bar text.disabled {
  opacity: 0.5;
}
