/* components/waterfall/waterfall.wxss */

.content {
  text-align: justify;
  margin-top: 20rpx;
  overflow: hidden;
}

.left, .right {
  vertical-align: top;
  width: 49%;
  float: left;
}

.right {
  float: right;
}

.item {
  background-color: #fff;
  margin: 1%;
  margin-bottom: 60rpx;
}

.item .image-wrap {
  position: relative;
}

.item .choice-wrap {
  position: absolute;
  right: 10rpx;
  bottom: 20rpx;
  width: 40rpx;
  height: 40rpx;
}

.item .choice-wrap image {
  width: 100%;
  height: 100%;
}

.item-img {
  width: 100%;
  border-radius: 10rpx;
}

.item-tag {
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}

.item-tag view {
  float: left;
  font-size: 27rpx;
  line-height: 38rpx;
  color: #ccc;
  margin-right: 10rpx;
  text-align: justify;
  word-break: break-all;
}

.item-tag text {
  font-size: 27rpx;
  line-height: 38rpx;
  color: #000;
  word-break: break-all;
}

.item-tag .sharp {
  color: #ccc;
}
